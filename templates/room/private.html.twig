{% extends 'base.html.twig' %}

{% block title %}Edit-{{room.summary}}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>{{ room.summary }}</h1>
        <ul>
            {% if room.description is not null %}
                <li>Description: {{ room.description }}</li>
            {% endif %}
            {% if room.superficy is not null %}
                <li>Superficie: {{ room.superficy }}m²</li>
            {% endif %}
            <li>Capacité: {{ room.capacity }} personnes</li>
            <li>Prix: {{ room.price }}€</li>
            <li>Adresse: {{ room.address }} (
                {% for region in room.regions %}{#TODO: vérifier que cette syntaxe de for est correcte#}
                    {{ region.name }}
                    {% if not loop.last %}
                        ,
                    {% endif %}
                {% endfor %}
                )
            </li>
            <li>Propriétaire: {{ room.owner.familyName }} {{ room.owner.firstname }}</li>
        </ul>
    </div>
{% endblock %}
