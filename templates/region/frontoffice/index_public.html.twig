{% extends 'base.html.twig' %}

{% block title %}Regions{% endblock %}

{% block h1 %}Liste des r√©gions{% endblock %}

{% block content %}
    {% for region in regions %}
        {% set nb_rooms = region.rooms|length %}
        <a class="btn-outline-dark" href="{{ path('region_public_show', {id:region.id}) }}" >{{ region.name }}:
            {% if nb_rooms == 0 %}
                Aucune annonce disponible
            {% elseif nb_rooms == 1 %}
                1 annonce disponible
            {% else %}
                {{ nb_rooms }} annonces disponibles
            {% endif %}
        </a>
        <br>
    {% endfor %}
{% endblock %}
